<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:padding="10dp"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="40dp"
        android:id="@+id/btnimage_goBack"
        android:layout_height="40dp"
        android:background="@color/medium_yellow"
        app:tint="@color/night_black"
        android:src="@drawable/img_goback" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userEmail"
            android:layout_width="match_parent"
            android:textSize="23sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="83dp"
            android:textColor="@color/dark_yellow"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tv_photoCount"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/dark_yellow"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="" />

        <LinearLayout
            android:id="@+id/storageprogressLayout"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:gravity="center"
            android:background="@drawable/card_border"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_showstoragesize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_yellow"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/storageProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_states" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/themeLayout"
            android:padding="3dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginEnd="80dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:textColor="@color/dark_yellow"
                android:text="@string/application_theme" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_theme"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_height="100dp"
            android:orientation="horizontal">



            <TextView
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="@string/language"
                android:textColor="@color/dark_yellow"
                android:layout_marginEnd="40dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_trlang"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/img_trflag"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:padding="0dp"

                />

            <ImageButton
                android:id="@+id/btn_enlang"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/img_enflag"
                android:scaleType="fitXY"
                android:padding="0dp"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_logout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:background="@color/medium_yellow"
        app:tint="@color/night_black"
        android:src="@drawable/img_logout" />

</LinearLayout>